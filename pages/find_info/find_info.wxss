page {
  background-color: #FFFFFF; }

.info-header {
  box-sizing: border-box;
  padding: 40rpx;
  background-color: #F5F5F5;
  height: 220rpx; }
  .info-header .title {
    font-size: 36rpx;
    font-weight: bold;
    color: #343434; }
  .info-header .date {
    margin-top: 15rpx;
    font-size: 24rpx;
    color: #737373; }

.info-content {
  padding: 40rpx;
  font-size: 32rpx;
  color: #555555;
  letter-spacing: 1rpx;
  line-height: 58rpx; }
  .info-content image {
    width: 100%;
    height: 240rpx; }
