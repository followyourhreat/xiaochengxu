.news-list {
  padding: 30rpx; }
  .news-list .item {
    margin-bottom: 30rpx; }
    .news-list .item image {
      border-radius: 10rpx;
      width: 100%;
      height: 240rpx; }
    .news-list .item .title {
      font-weight: bold;
      font-size: 32rpx;
      color: #343434;
      margin: 15rpx 0; }
    .news-list .item .date {
      font-size: 24rpx;
      color: #737373; }
