.water {
  margin-top: 80rpx;
  display: flex;
  flex-direction: column;
  align-items: center; }
  .water image {
    width: 250rpx;
    height: 200rpx; }
  .water .water-title {
    margin: 15rpx 0;
    font-weight: bold;
    font-size: 36rpx;
    color: #498a08; }
  .water .water-time {
    font-size: 28rpx;
    color: #498a08; }

.order {
  padding: 30rpx; }
  .order .order-item {
    padding: 30rpx 0;
    display: flex;
    justify-content: space-between; }
    .order .order-item {
      position: relative; }
      .order .order-item:after {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 200%;
        height: 200%;
        border-bottom: 1px solid #e0e0e0;
        box-sizing: border-box;
        transform: scale(0.5);
        transform-origin: 0 0;
        pointer-events: none; }
    .order .order-item > view {
      display: flex;
      align-items: center;
      font-size: 28rpx;
      color: #333333; }
      .order .order-item > view image {
        margin-right: 15rpx;
        width: 48rpx;
        height: 48rpx; }
    .order .order-item .item-water {
      font-size: 28rpx;
      color: #498A08; }
    .order .order-item .item-price {
      font-size: 28rpx;
      color: #FF8351; }

.over-btn {
  margin-top: 160rpx;
  text-align: center;
  display: flex;
  justify-content: center; }
  .over-btn .btn {
    width: 560rpx;
    height: 94rpx;
    background: #498A08;
    border-radius: 94rpx;
    line-height: 94rpx;
    font-size: 32rpx;
    color: #FFFFFF; }

.remind {
  padding: 30rpx;
  font-size: 24rpx;
  color: #999BA2;
  letter-spacing: 0;
  line-height: 42rpx; }
  .remind .remind-red {
    color: #fc5757; }
  .remind .remind-blue {
    color: #0c97fe; }
